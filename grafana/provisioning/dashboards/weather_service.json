{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Graphics --" },
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Request Volume (Rate)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(weather_service_http_requests_total[1m]))",
          "legendFormat": "Req/Sec"
        }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "palette-classic" }, "unit": "reqps" }
      }
    },
    {
      "title": "P99 Latency (Duration)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(weather_service_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "thresholds": { "mode": "absolute", "steps": [ { "color": "green", "value": null }, { "color": "red", "value": 0.5 } ] } }
      }
    },
    {
      "title": "Error Rate (Errors)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(weather_service_http_requests_total{code=~\"5..\"}[1m]))",
          "legendFormat": "5xx Errors"
        }
      ],
      "fieldConfig": {
        "defaults": { "color": { "fixedColor": "red", "mode": "fixed" } }
      }
    },
    {
      "title": "Cache Performance",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(weather_service_cache_hits_total[5m])) / (sum(rate(weather_service_cache_hits_total[5m])) + sum(rate(weather_service_cache_misses_total[5m]))) * 100",
          "legendFormat": "Hit Ratio %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 }
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
  "title": "Weather Service: Golden Signals",
  "uid": "weather-sre-dash",
  "version": 1
}